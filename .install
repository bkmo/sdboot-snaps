#!/bin/bash
## arg 1:  the new package version
post_install() {
	if systemctl show sdboot-snaps-watch.path  --property=NeedDaemonReload | grep yes >& /dev/null; then systemctl daemon-reload
fi
}

## arg 1:  the new package version
## arg 2:  the old package version
post_upgrade() {
    if systemctl show sdboot-snaps-watch.path  --property=NeedDaemonReload | grep yes >& /dev/null; then systemctl daemon-reload
fi
    }
